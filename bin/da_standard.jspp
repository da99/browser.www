#!/usr/bin/env mksh
#
#
THE_ARGS="$@"
THIS_DIR="$(mksh_setup dirname_of_bin "$0")"
PORT=${PORT:-"4568"}

export PORT
TEMP="/tmp/da_standard"
TEMP_DIR=${TEMP_DIR:-"/tmp/da_standard"}
TEMP_SPLITS="$TEMP/splits"
export TEMP_DIR
mkdir -p $TEMP_SPLITS
mkdir -p $TEMP

if [[ -z "$@" ]]; then
  action="watch"
else
  action=$1
  shift
fi

set -u -e -o pipefail


Color_Off='\e[0m'
Bold="$(tput bold)"
Reset='\e[0m'
BRed='\e[1;31m'
Red='\e[0;31m'
Green='\e[0;32m'
BGreen='\e[1;32m'
Orange='\e[0;33m'
BOrange='\e[1;33m'



case $action in
  help|--help)
    mksh_setup print-help $0
    ;;

  *)
    source "$THIS_DIR/../mksh_setup/bin/source/name-to-func/_.sh"
    name-to-func "$action"  "$@"
    ;;
esac
